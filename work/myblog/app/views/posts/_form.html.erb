<%= javascript_include_tag "ckeditor/ckeditor" %>
<%= form_for(@post) do |f| %>
    <% if @post.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@post.errors.count, "error") %>
            prohibited this post from being saved:</h2>
          <ul>
            <% @post.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :topic %>
      <%= f.text_field :topic %>
    </div>
    <div class="field">
      <%= f.label :picture_url %>
      <%= f.text_field :picture_url %>

    </div>
    <div class="field">
      <%= f.text_area :body, {:class => "post_edit_text"} %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
