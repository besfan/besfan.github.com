<% if session[:user_id] %>
    <%= form_for([@post, @post.comments.build]) do |f| %>
        <div class="field">
          <%= f.label :commenter %>
          <br/>
          <%= f.text_field :commenter,{:value=>"#{get_session_user_name}", :disabled=>true} %>
        </div>
        <div class="field">
          <%= f.label :body %>
          <br/>
          <%= f.text_area :body %>
        </div>
        <div class="actions">
          <%= f.submit %>
        </div>
    <% end %>
<% else %>
    <p id="comment_login_message">请登陆后评论！</p>
    <a href="/admin/index">Login</a>
    <a href="/users/new">Register</a>
<% end %>
